extends layout

block contenido 
    .contenido-principal 
        h1 #{pageName}

        if errors 
            each error in errors
                .alerta= error.text

        form.agregar-proyecto(action="/newProject" method="POST")
            .campo 
                label(for="nombre") Project Name:
                input(type="text" id="nombre" name="nombre" placeholder="Name your Project")
            .campo.enviar 
                input(type="submit" value="Add" class="boton")

        